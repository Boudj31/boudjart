{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <section class="ftco-section bg-light" data-section="blog">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-5">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">Newsletters</span>
                    <h2 class="mb-4">Découvrez les actualités liés au monde artistique </h2>
                    <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
                </div>
            </div>
            <div class="row d-flex">
                {% for blog  in blogs %}
                    <div class="col-md-6 d-flex ftco-animate">
                        <div class="blog-entry justify-content-end">
                            <h3 class="heading">{{ blog.titre }}</a></h3>
                            <p>{{ blog.contenu }}</p>
                            <div class="d-flex align-items-center mt-4 meta">
                                <p class="mb-0"><a href="{{ path('single') }}" class="btn btn-secondary">Voir plus <span class="ion-ios-arrow-round-forward"></span></a></p>
                                <p class="ml-auto mb-0">
                                    <a href="#" class="mr-2">{{ blog.user }} </a>
                                    <a href="#" class="meta-chat"><span class="icon-chat"></span></a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center">
                {%  do blogs.setPageRange(2) %}
                {{ knp_pagination_render(blogs, 'base/pagination.html.twig') }}
            </div>
        </div>
    </section>
{% endblock %}
