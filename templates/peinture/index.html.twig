{% extends 'base.html.twig' %}

{% block title %}Réalisation{% endblock %}

{% block body %}
    <section class="ftco-section bg-light" data-section="blog">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-5">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">Réalisations</span>
                    <h2 class="mb-4">Découvrez les réalisatuons</h2>
                    <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
                </div>
            </div>
            <div class="row d-flex">
                {% for peinture  in peintures %}
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry justify-content-end">
                            <a href="{{ path('single') }}" class="block-20" style="background-image:  url({{ peinture.file }});">
                            </a>
                                <h3 class="heading">{{ peinture.nom }}</a></h3>
                                <p>{{ peinture.description }}</p>
                                <div class="d-flex align-items-center mt-4 meta">
                                    <p class="mb-0"><a href="{{ path('single') }}" class="btn btn-secondary">Voir plus <span class="ion-ios-arrow-round-forward"></span></a></p>
                                    <p class="ml-auto mb-0">
                                        <a href="#" class="mr-2">{{ peinture.prix }} €</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                         {% endfor %}
                    </div>
              <div class="d-flex justify-content-center">
                  {%  do peintures.setPageRange(2) %}
                  {{ knp_pagination_render(peintures, 'base/pagination.html.twig') }}
              </div>
            </div>
    </section>
{% endblock %}
